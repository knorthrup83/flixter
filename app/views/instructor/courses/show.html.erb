<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <% if current_course.image.present? %>
    <%= image_tag current_course.image.url class: 'img-fluid' %>
  <% end %>
  <br />
  <%= link_to 'Preview as Student...', course_path(current_course), class: 'btn btn-warning float-right' %>
  <br class="clear" />

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>

  <ul>
    <% current_course.sections.each do |section| %>
      <li>
          <%= section.title %>
          <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right brn btn-primary btn-sm' %>
          <ul>
            <% section.lessons.rank(:row_order).each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
            <% end %>
          </ul>        
          <br class="clear" />
      </li>
    <% end %>
  </ul>
</div>